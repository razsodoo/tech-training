<odoo>
    <record id="view_academy_course_tree" model="ir.ui.view">
        <field name="name">academy.course.tree</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="level"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_academy_course_form" model="ir.ui.view">
        <field name="name">academy.course.form</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="level"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_academy_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">academy.course</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="academy_root_menu" name="Academy"/>
    <menuitem id="academy_course_menu" name="Courses" parent="academy_root_menu" action="action_academy_course"/>
</odoo>