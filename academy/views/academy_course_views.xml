<odoo>
    <record id="view_academy_course_tree" model="ir.ui.view">
        <field name="name">academy.course.tree</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="level"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_academy_course_form" model="ir.ui.view">
        <field name="name">academy.course.form</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="level"/>
                        <field name="description"/>
                        <field name="active"/>
                        <field name="base_price"/>
                        <field name="additional_fee"/>
                        <field name="total_price" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Sessions">
                            <field name="session_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="session_number"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="instructor_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="course_view_pivot" model="ir.ui.view">
        <field name="name">course.view.pivot</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="level" type="row"/>
                <field name="name" type="row"/>
                <field name="base_price" type="measure"/>
                <field name="total_price" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_academy_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">academy.course</field>
        <field name="view_mode">list,pivot,form</field>
    </record>
</odoo>
