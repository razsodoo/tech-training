<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Añadir la vista de mapa -->
    <record id="view_motorcycle_registry_map" model="ir.ui.view">
        <field name="name">motorcycle.registry.map</field>
        <field name="model">motorcycle.registry</field>
        <field name="arch" type="xml">
            <map string="Motorcycle Map" res_partner="owner_id"/>
        </field>
