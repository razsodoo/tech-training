    <!-- Reescribir acción existente: MUST use same ID -->
    <record id="motorcycle_registry.action_motorcycle_registry" model="ir.actions.act_window">
        <field name="name">Motorcycle Registry</field>
        <field name="res_model">motorcycle.registry</field>
        <field name="view_mode">list,map,form</field>
    </record>
</odoo>
