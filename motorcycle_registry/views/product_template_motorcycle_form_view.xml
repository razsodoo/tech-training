<!-- views/product_template_view.xml -->
<odoo>
    <record id="view_product_template_motorcycle_form" model="ir.ui.view">
        <field name="name">product.template.motorcycle.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="is_motorcycle"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Motorcycle Data" invisible="not is_motorcycle">
                    <group>
                        <field name="horsepower"/>
                        <field name="top_speed"/>
                        <field name="torque"/>
                        <field name="battery_capacity"/>
                        <field name="charge_time"/>
                        <field name="range"/>
                        <field name="curb_weight"/>
                        <field name="make"/>
                        <field name="model"/>
                        <field name="year"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
