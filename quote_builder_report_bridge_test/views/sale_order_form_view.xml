<odoo>
    <record id="view_order_form_inherit_custom_report" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.custom.report</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button string="Print Quote" name="sale.action_report_saleorder" type="action" class="btn-primary"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="report_id"/>
            </xpath>
        </field>
    </record>
</odoo>
